	</servlet>
	
	<servlet-mapping>
		<servlet-name>approve_reimbursement</servlet-name>
		<url-pattern>/approve_reimbursement</url-pattern>	
	</servlet-mapping>
	
	<servlet>
		<servlet-name>deny_reimbursement</servlet-name>
