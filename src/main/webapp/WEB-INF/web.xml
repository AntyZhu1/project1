	</servlet-mapping>
	
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.anthony.servlet.LogoutServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>	
	</servlet-mapping>
	
	<servlet>
		<servlet-name>profile</servlet-name>
		<servlet-class>com.anthony.servlet.ProfileServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>profile</servlet-name>
		<url-pattern>/profile</url-pattern>	
	</servlet-mapping>
	
	<servlet>
		<servlet-name>apply</servlet-name>
		<servlet-class>com.anthony.servlet.ApplyForReimbursementServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>apply</servlet-name>
		<url-pattern>/apply-for-reimbursement</url-pattern>	
	</servlet-mapping>
	
	<servlet>
		<servlet-name>try_login</servlet-name>
		<servlet-class>com.anthony.servlet.TryLoginServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>try_login</servlet-name>
		<url-pattern>/try_login</url-pattern>	
	</servlet-mapping>
	
	<servlet>
		<servlet-name>manage_reimbursements</servlet-name>
